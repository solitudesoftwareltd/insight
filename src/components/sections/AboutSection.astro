---
import { marked } from "marked";

interface Mugshot {
  image: string;
  name: string;
  position: string;
}

interface Props {
  type: "about";
  title: string;
  content: string;
  mugshots: Mugshot[];
}

const { title, content, mugshots } = Astro.props;
