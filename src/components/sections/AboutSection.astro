      class="bg-[linear-gradient(68deg,#EC008C_1.97%,#FFF_11.14%,#00A7E7_26.14%) md:pr-12 block"
      set:html={title}
    />
    <div
      class="pt-12 md:pt-0 md:pl-12 md:mt-34 relative flex flex-col justify-center"
    >
